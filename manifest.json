{
"manifest_version": 2 ,
"name":"B64 ENCRYPTION",
"version":"1.0",
"description":"password encryption using b64 ",
"icons":{
    "128":"images/icon128.png",
    "48":"images/icon48.png",
    "16":"images/icon16.png"
},
"browser_action":{
    "default_icon":{
        "128":"images/icon128.png",
        "48":"images/icon48.png",
        "16":"images/icon16.png"
    },
    "default_popup":"index.html",
    "default_title":"used to encrypt your password"
},
"permissions": [
    "activeTab"
  ],
"content_scripts":[
    {"matches":["<all_urls>"],
    "js":["design.js"]}
]
}
